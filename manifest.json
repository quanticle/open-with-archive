{
  "manifest_version": 3,
  "name": "Open with Archive.is",
  "icons": {
    "96": "book_96.png"
  },
  "version": "0.1",
  "description": "Add a right-click menu item to allow the user to open links with archive.is",
  "permissions": ["background", "contextMenus", "storage"],
  "options_ui": {
    "page": "options/options.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "scripts": ["js/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/quanticle/open-with-archive/master/update.json"
    }
  }
}
